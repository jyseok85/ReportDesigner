<div class=@("report " + Class) style=@("width:" + Width + "px;Height:" + Height + "px;")>

</div>

<style>
    .report {
        background-color: ghostwhite;
        border: solid lightgray 1px;
        grid-area: report;
    }
</style>
@code {
    [Parameter]
    public string Class { get; set; }

    [Parameter]
    public int Width { get; set; } = 798;

    [Parameter]

    public int Height { get; set; } = 1123;
}
